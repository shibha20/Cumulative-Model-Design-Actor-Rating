DROP TABLE IF EXISTS actors;
DROP TYPE IF EXISTS films;
/*create a new data type*/
CREATE TYPE films AS (film TEXT, 
						filmid INTEGER,
							votes INTEGER, 
							rating REAL);


CREATE TYPE quality_class as ENUM('star','good','average','bad');


/*create the table with new data type*/
CREATE TABLE actors (
 	actor TEXT,
 	actorid TEXT,
	currentyear INTEGER,
 	films films[],
	isactive BOOLEAN,
	quality_class quality_class,
 	PRIMARY KEY(actorid,currentyear)
)
